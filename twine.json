    "title": "OpenFAST Service",
    "description": "Use the OpenFAST service to model a wind turbine with BEM theory",
    "input_values_schema": {
        "type": "object",
        "properties": {
            "inflow": {
                "title": "Inflow (wind parameters)",
                "type": "object",
                "properties": {
                    "wind_speed": {
                        "title": "Wind Speed",
                        "description": "Steady inflow wind speed at the reference height [m/s]",
                        "type": "number",
                        "minimum": 1e-6,
                        "maximum": 330
                    },
                    "reference_height": {
                        "title": "Reference Height",
                        "description": "The reference height above ground at which the inflow wind speed is defined [m]",
                        "type": "number",
                        "minimum": 1e-6,
                        "maximum": 1000
                    }
                },
                "required": ["wind_speed", "reference_height"]
            },
            "blade_polars": {"$ref": "#/definitions/blade_polars"},
            "monitoring_radii": {
                "title": "Nondimensional monitoring radii",
                "description": "Nondimensional radii (r/r_tip) at which the output (simulated) blade section quantities are given [no units]",
                "type": "array",
                "items": {
                    "type": "number",
                    "title": "Nondimensional radius",
                    "minimum": 0.001,
                    "maximum": 1
                }
            },
            "required": ["inflow", "blade_polars", "monitoring_radii"]
        }
    },
    "output_values_schema": {
        "type": "object",
        "properties": {
            "sampling_period": {
                "description": "Sampling period [s]",
                "type": "number",
                "minimum": 0
            },
            "turbine_power_output": {
                "title": "Turbine power and thrust coefficients",
                "description": "Timeseries of turbine power and thrust coefficients (array of two-tuples CP and CT [no units])",
                "type": "array",
                "items": [
                    {"type": "number"}, # add description + title
                    {"type": "number"}
                ]
            },
            "tower_base_bending_moments": {
                "description": "Timeseries of tower base bending moments (array of six-tuples Fx, Fy, Fz, Mx, My, Mz [N])",
                "type": "array",
